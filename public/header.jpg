/* Update the header styles */
.app-header {
  position: relative;
  width: 100%;
  height: 200px;
  border-radius: 15px;
  margin-bottom: 2rem;
  overflow: hidden;
}

.app-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(rgba(26, 15, 61, 0.3), rgba(26, 15, 61, 0.5));
  z-index: 1;
}

.app-title {
  position: relative;
  z-index: 2;
  color: var(--neon-pink);
  font-size: 3.5rem;
  text-align: center;
  margin: 0;
  text-shadow: 
    0 0 10px var(--neon-pink),
    0 0 20px var(--neon-pink),
    0 0 30px var(--neon-pink);
  font-family: 'VT323', monospace;
  letter-spacing: 2px;
}

/* Rest of the CSS remains the same */
